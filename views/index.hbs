<div class="container expenses">
  <h2>Expenses</h2>
  <table class="expenses-table">
    <thead>
      <tr>
        <th>Description</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each expenses}}
        <tr>
          <td>{{this.description}}</td>
          <td>{{this.amount}}</td>
          <td>{{this.date}}</td>
          <td>
            <a href="/expenses/edit/{{this._id}}">Edit</a>
            <form action="/expenses/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/expenses/new">Add New Expense</a>
</div>
